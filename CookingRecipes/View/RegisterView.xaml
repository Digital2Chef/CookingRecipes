<UserControl x:Class="CookingRecipes.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingRecipes.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" Background="GhostWhite">
        <!-- Login Screen-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock Text="Login To Recipe Book" Foreground="OrangeRed" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <!--Username -->
        <StackPanel Margin="5"  HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
            <Label Width="120" Content="Username:" FontSize="20"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"  Width="120" Height="35" />
        </StackPanel>

        <!--Password-->
        <StackPanel Margin="5" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="2">
            <Label Width="120" Content="Password:" FontSize="20"/>
            <PasswordBox PasswordChanged="PasswordRegister_PasswordChanged"  x:Name="password_register"  VerticalContentAlignment="Center"   Width="120" Height="35"/>
        </StackPanel>

        <!--Confirm Password-->
        <StackPanel Margin="5" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="3">
            <Label Width="120" Content="Confirm:" FontSize="20"/>
            <PasswordBox PasswordChanged="PasswordConfirm_PasswordChanged" x:Name="confirm_password" VerticalContentAlignment="Center"  Width="120" Height="35"/>
        </StackPanel>

        <!--Register button-->
        <StackPanel Margin="5" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="4">
            <Label Width="120"/>
            <Button Command="{Binding registerCommand}"  Background="Green" Content="Register"  Width="120" Height="35"  />
        </StackPanel>

        <!--Back btn-->
        <StackPanel Margin="5"  HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="5">
            <Label Width="120"/>
            <Button Command="{Binding backToLogin}" Content="Back" Background="Orange"  Width="120" Height="35" />
        </StackPanel>

    </Grid>
</UserControl>
