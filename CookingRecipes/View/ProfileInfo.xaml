<UserControl x:Class="CookingRecipes.View.ProfileInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingRecipes.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="GhostWhite" VerticalAlignment="Center" HorizontalAlignment="Center">
        <!--Window to add user's personal information!-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <!--Title-->
        <TextBlock Grid.Row="0" Text="{Binding CurrentUser.Username, StringFormat='Personal information for user:{0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>

        <TextBlock Grid.Row="1" Text="Add your personal information" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>

        <!--Surname-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Orientation="Horizontal">
            <Label Width="120" Content="Surname:" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>
            <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" Width="120" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!--Lastname-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="3" Orientation="Horizontal">
            <Label Width="120" Content="Last name:" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>
            <TextBox Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}" Width="120" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!--Email-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="4" Orientation="Horizontal">
            <Label Width="120" Content="Email:" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="120" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <!--Phone-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="5" Orientation="Horizontal">
            <Label Width="120" Content="Phone:" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Width="120" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="6" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--Save-->
            <Button Margin="5"  Command="{Binding addInfo}" Content="Update" Width="100" Height="35" Background="Green"/>
            
            <!--Show information-->
            <Button Margin="5"  Command="{Binding showInfo}" Content="Show info" Width="100" Grid.Column="1" Height="35" Background="Blue"/>
            
            <!--Change pass btn-->
            <Button Margin="5" Command="{Binding updatePass}" Content="Change password" Width="100" Grid.Column="2" Height="35" Background="Azure"/>

            <!--Back button-->
            <Button Margin="5" Command="{Binding back}" Content="Back" Grid.Row="2" Width="100" Grid.Column="3" Height="35" Background="Red"/>
        </Grid>
    </Grid>
</UserControl>
